  margin: 10px;
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.9);
}

.dish-image {
  width: 100%;
  height: auto;
  border-radius: 8px;
}

.dish-details {
  margin-top: 10px;
}

.quantity-controls {
  display: flex;
  align-items: center;
