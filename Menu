import React, { useState } from 'react';
import { BrowserRouter as Router, Route, Switch } from 'react-router-dom';
import Menu from './components/Menu';
import OrderPage from './components/OrderPage';
import Cart from './components/Cart';
import Checkout from './components/Checkout';  // Import the Checkout component

function App() {
  const [cart, setCart] = useState([]);

  const addToCart = (dish) => {
    setCart((prevCart) => {
      const existingItem = prevCart.find(item => item.name === dish.name);
      if (existingItem) {
        return prevCart.map(item => item.name === dish.name ? { ...item, quantity: item.quantity + 1 } : item);
      } else {
        return [...prevCart, { ...dish, quantity: 1 }];
      }
    });
  };

  const updateQuantity = (name, quantity) => {
    setCart((prevCart) =>
      prevCart.map(item =>
        item.name === name ? { ...item, quantity } : item
      )
    );
  };

  return (
    <Router>
      <div className="App">
        <Switch>
          <Route path="/" exact>
            <Menu addToCart={addToCart} />
          </Route>
          <Route path="/order">
            <OrderPage cart={cart} addToCart={addToCart} />
          </Route>
          <Route path="/cart">
            <Cart cart={cart} updateQuantity={updateQuantity} />
          </Route>
          <Route path="/checkout">
            <Checkout />
          </Route>
          <Route path="*">
            <div>404 Not Found</div>
          </Route>
        </Switch>
      </div>
    </Router>
  );
}

export default App;





import React from "react";
import { BrowserRouter as Router, Route, Routes } from "react-router-dom";
import LoginPage from "./components/Login"; // Your login page component
import SignupPage from "./components/Signup"; // Your signup page component
import Menu from "./components/Menu"; // Your menu page component
import OrderPage from "./components/OrderPage"; // Import the OrderPage

const App = () => {
  return (
    <Router>
      <Routes>
        <Route path="/" element={<LoginPage />} /> {/* Home route for Login */}
        <Route path="/signup" element={<SignupPage />} /> {/* Route for Signup */}
        <Route path="/menu" element={<Menu />} /> {/* Route for Menu */}
        <Route path="/order" element={<OrderPage />} /> {/* Route for Order Page */}
      </Routes>
    </Router>
  );
};

export default App;







import React, { useState } from 'react';
import { BrowserRouter as Router, Route, Routes } from 'react-router-dom';
import LoginPage from './components/Login'; // Your login page component
import SignupPage from './components/Signup'; // Your signup page component
import Menu from './components/Menu'; // Menu page component
import OrderPage from './components/OrderPage'; // Order page component
import Cart from './components/Cart'; // Cart page component
import Checkout from './components/Checkout'; // Checkout page component

function App() {
  const [cart, setCart] = useState([]);

  // Function to add a dish to the cart
  const addToCart = (dish) => {
    setCart((prevCart) => {
      const existingItem = prevCart.find(item => item.name === dish.name);
      if (existingItem) {
        return prevCart.map(item => item.name === dish.name ? { ...item, quantity: item.quantity + 1 } : item);
      } else {
        return [...prevCart, { ...dish, quantity: 1 }];
      }
    });
  };

  // Function to update the quantity of items in the cart
  const updateQuantity = (name, quantity) => {
    setCart((prevCart) =>
      prevCart.map(item =>
        item.name === name ? { ...item, quantity } : item
      )
    );
  };

  return (
    <Router>
      <Routes>
        {/* Route for Login Page */}
        <Route path="/" element={<LoginPage />} />
        
        {/* Route for Signup Page */}
        <Route path="/signup" element={<SignupPage />} />
        
        {/* Route for Menu Page */}
        <Route path="/menu" element={<Menu addToCart={addToCart} />} />
        
        {/* Route for Order Page */}
        <Route path="/order" element={<OrderPage cart={cart} addToCart={addToCart} />} />
        
        {/* Route for Cart Page */}
        <Route path="/cart" element={<Cart cart={cart} updateQuantity={updateQuantity} />} />
        
        {/* Route for Checkout Page */}
        <Route path="/checkout" element={<Checkout />} />
        
        {/* Default fallback for unmatched routes */}
        <Route path="*" element={<div>404 Not Found</div>} />
      </Routes>
    </Router>
  );
}

export default App;





import React from 'react';
import { Link } from 'react-router-dom';
import './Cart.css'; // Make sure to have some styling for your Cart page

const Cart = ({ cart, updateQuantity }) => {
  // Calculate total price
  const calculateTotal = () => {
    return cart.reduce((total, item) => total + (item.price.slice(1) * item.quantity), 0);
  };

  return (
    <div className="cart-container">
      <h2>Your Cart</h2>

      {/* Check if the cart is empty */}
      {cart.length === 0 ? (
        <div className="empty-cart">
          <p>Your cart is empty.</p>
          <Link to="/menu" className="go-back-button">
            Go back to Menu
          </Link>
        </div>
      ) : (
        <div className="cart-items">
          {cart.map((item, index) => (
            <div key={index} className="cart-item">
              <div className="item-info">
                <h3>{item.name}</h3>
                <p>Price: {item.price}</p>
              </div>
              <div className="quantity-controls">
                <button
                  onClick={() =>
                    updateQuantity(item.name, item.quantity > 1 ? item.quantity - 1 : 1)
                  }
                >
                  -
                </button>
                <span>{item.quantity}</span>
                <button onClick={() => updateQuantity(item.name, item.quantity + 1)}>+</button>
              </div>
              <div className="item-total">
                <p>Total: ${(item.price.slice(1) * item.quantity).toFixed(2)}</p>
              </div>
            </div>
          ))}
          {/* Order Summary */}
          <div className="order-summary">
            <h3>Order Summary</h3>
            <p>Total Amount: ${calculateTotal().toFixed(2)}</p>
            <Link to="/checkout" className="checkout-button">
              Proceed to Checkout
            </Link>
          </div>
        </div>
      )}
    </div>
  );
};

export default Cart;




